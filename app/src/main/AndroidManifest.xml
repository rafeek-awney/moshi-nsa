<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mario.rafeek.etba3ny">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/LightTheme">
        <activity android:name=".ApplicationsActivity" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mario.rafeek.etba3ny.MainActivity" />
        </activity>
        <activity
            android:name=".Splash"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".BibleDisplay" />
        <activity android:name=".BibleHome" />
        <activity android:name=".BibleSearchActivity" />
        <activity android:name=".FeelHome" />
        <activity android:name=".AboutActivity" />
        <activity android:name=".AgpiaHome" />
        <activity android:name=".AgpiaDisplay" />
        <activity android:name=".TranimList" />
        <activity android:name=".TranimDisplay" />
        <activity android:name=".HistoryPopeList" />
        <activity android:name=".HistoryPopeDisplay" />
        <activity android:name=".HistoryHome" />
        <activity android:name=".unusedOpinionActivity" />
        <activity android:name=".TranimSearch" />
        <activity android:name=".GeneralDisplayActivity" />
    </application>

</manifest>